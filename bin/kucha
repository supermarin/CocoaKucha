#!/usr/bin/env ruby
# Automatic slide switcher for CocoaCucha
#
#

def every(interval); interval end
def public(object);  self end
def static(object);  self end
def void(object);    self end
def main();          yield end

class Numeric
  def seconds
    loop do
      sleep self
      yield
    end
  end
end

def change_slide
  @slide += 1
  puts "Changing slide #{@slide} to slide #{@slide + 1}"
  cmd = %Q(osascript -e 'tell application "System Events" to key code 124 using control down')
  system(cmd)
end

def countdown
  print "Starting in "
  5.downto 1 do |numbah|
    print "#{numbah}..."
    sleep 1
  end
  puts "GO!"
end

# Sorry, I had to
public static void main() {
  @slide = 0
  countdown
  every 20.seconds { change_slide }
}

